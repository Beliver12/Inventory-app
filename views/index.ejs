<body>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <h1>Homepage</h1>
    </head>
    <nav>
        <ul>
            <% if (locals.movies) {%>
            <% for (let i = 0; i < movies.length; i++) { %>
                <h3>Movie <%=[i]%></h3>
                <li>
                    <p><%= movies[i].title %></p>
                    <p><%= movies[i].year %></p>
                    <p><%= movies[i].director %></p>
                    <p><%= movies[i].genre %></p>
                    <p><%= movies[i].actor %></p>
                    <% if (locals.movieinfo) {%>
                        <% for (let a = 0; a <  movieinfo.length; a++) { %>

                            <% for (let j = 0; j < movieinfo[a].results.length; j++) { %>

                                <% if (movieinfo[a].results[j].title === movies[i].title) {%>
                                    <img src="<%= moviedata.base_url%><%= moviedata.poster_sizes[2]%><%= movieinfo[a].results[j].poster_path %>" alt="">

                                    <% } %>

                                <% } %>

                            <% } %>
                    <% } %>
                </li>
           <% } %>
           <% } %>
        </ul>
        <ul>
            <h3>Category</h3>
            <% if (locals.movies) {%>
                <% for (let i = 0; i < movies.length; i++) { %>
                    <% if (movies[i].genre) {%>
                        
                    <li>
                        <a href="/category/<%= movies[i].genre %>">
                            <%= movies[i].genre %>
                       </a>
                        
                    </li>
                    <% } %>
                    <% } %>
           <% } %>
        </ul>
        <a href="/create">
            <span>Create new User ==></span>
        </a>
    </nav>
</body>