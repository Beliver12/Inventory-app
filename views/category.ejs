<body>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <h1>Homepage</h1>
    </head>
    <nav>
        <ul>
            <% if (locals.category) {%>
            <% for (let i = 0; i < category.length; i++) { %>
                <h3>Message <%=[i]%></h3>
                <li>
                    <p><%= category[i].title %></p>
                    <p><%= category[i].year %></p>
                    <p><%= category[i].director %></p>
                    <p><%= category[i].genre %></p>
                    <p><%= category[i].actor %></p>
                    <% movieinfo.forEach((item) => { %>
                        <% if (item.title === category[i].title) {%>
                    <img src="<%= moviedata.base_url %><%= moviedata.poster_sizes[2] %><%= item.poster_path %>" alt="">
                    <% } %>
                    <% }); %> 
                    
                </li>
           <% } %>
           <% } %>
        </ul>
        <a href="/create">
            <span>Create new User ==></span>
        </a>
    </nav>
</body>