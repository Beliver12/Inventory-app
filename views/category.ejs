<body>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <h1><%= title %></h1>
    </head>
    <nav>
        <ul>
            <% if (locals.category) {%>
            <% for (let i = 0; i < category.length; i++) { %>
                <form action="/deleteCategory/<%= category[i].genre %> " method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this category? Important: this will delete all movies in that category');">Delete</button>
                    </form>
                <h3>Message <%=[i]%></h3>
                <li>
                    <p><%= category[i].title %></p>
                    <p><%= category[i].year %></p>
                    <p><%= category[i].director %></p>
                    <p><%= category[i].genre %></p>
                    <p><%= category[i].actor %></p>
                    <img src="<%= category[i].url %>" alt="">
                    
                </li>
           <% } %>
           <% } %>
        </ul>
        <a href="/create">
            
            <span>Create new User ==></span>
        </a>
        <a href="/">Back to home</a>
    </nav>
</body>